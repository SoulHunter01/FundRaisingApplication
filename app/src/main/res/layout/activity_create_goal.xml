<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".CreateGoal">


    <Spinner
        android:paddingStart="20dp"
        android:id="@+id/spinner"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginStart="106dp"
        android:layout_marginTop="272dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="418dp"
        android:background="#78039c"
        android:spinnerMode="dropdown"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.79"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/title"
        android:paddingStart="20dp"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="345dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="345dp"
        android:hint="Enter Title...."
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="15dp"
        android:textStyle="bold"
        android:background="@drawable/rounded_bars"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.404"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></EditText>

    <EditText
        android:id="@+id/description"
        android:paddingStart="20dp"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:background="@drawable/rounded_bars"
        android:layout_marginStart="6dp"
        android:layout_marginTop="424dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="266dp"
        android:hint="Enter Description...."
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.404"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.608"></EditText>

    <EditText
        android:id="@+id/targetamount"
        android:paddingStart="20dp"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:background="@drawable/rounded_bars"
        android:layout_marginTop="508dp"
        android:layout_marginBottom="182dp"
        android:hint="Enter Target Amount...."
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.433"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7"></EditText>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/creategoalbutton"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="614dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="69dp"
        android:backgroundTint="#78039c"
        android:background="@drawable/rounded_bars"
        android:text="Create Goal"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></androidx.appcompat.widget.AppCompatButton>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="53dp" />


</androidx.constraintlayout.widget.ConstraintLayout>