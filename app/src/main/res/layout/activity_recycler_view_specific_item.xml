<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".RecyclerViewSpecificItem">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="125dp"
        android:src="@drawable/logo"
        tools:layout_editor_absoluteX="106dp"
        tools:layout_editor_absoluteY="40dp" />

    <TextView
        android:id="@+id/title_of_goal"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="100dp"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="40dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/description_of_goal"
        android:layout_width="300dp"
        android:layout_height="275dp"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="270dp"/>

    <TextView
        android:id="@+id/category_of_goal"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/targetamount_of_goal"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="600dp"
        android:layout_marginLeft="200dp"></TextView>


</RelativeLayout>