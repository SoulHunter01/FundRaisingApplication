<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
 >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_to_show"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded_circular_image"></de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:id="@+id/title"
        android:layout_width="150dp"
        android:layout_height="34dp"
        android:layout_marginTop="110dp"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/category"
        android:layout_width="150dp"
        android:layout_height="34dp"
        android:layout_marginTop="145dp"
        android:textAlignment="center"
        android:textColor="@color/white"

        android:textSize="13dp"></TextView>

    <TextView
        android:id="@+id/targetamount"
        android:layout_width="50dp"
        android:layout_height="49dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/zxing_custom_possible_result_points"
        android:textSize="15dp"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/status"
        android:layout_width="150dp"
        android:layout_height="34dp"
        android:layout_marginTop="180dp"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold" />


</RelativeLayout>